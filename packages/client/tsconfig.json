{
    "extends": "../../tsconfig.base.json",
    "include": ["./src"], // Проверяем только файлы из src.
    "compilerOptions": {
        "baseUrl": ".", // Разрешение относительных импортов относительно этой директории.
        "paths": { "~/*": ["./src/*"] }, // Список alias-ов для импортов. Подхватываются Bundler-ом (esbuild).

        // Эти опции делают возможным подключение проекта из других проектов.
        "composite": true, // Обязательно для подключаемых проектов.
        "noEmit": false, // Обязательно для следующей опции.
        "emitDeclarationOnly": true, // Генерируем только .d.ts, за сборку кода отвечает Bundler (esbuild)
        "outDir": "dist", // полученные .d.ts складываем в dist
        "rootDir": "./src" // считать src (а не эту папку) за корень.
    }
}
